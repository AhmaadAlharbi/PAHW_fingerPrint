@{
    ViewData["Title"] = "تسجيل الدخول";
    var errorMsg = TempData["ErrorMsg"] as string;
    
    var successMsg = TempData["SuccessMsg"] as string;
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800;900&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --maroon: #692f39;
            --maroon-light: #8b3d4d;
            --maroon-dark: #52242d;
            --blue: #3e596e;
            --blue-light: #4d6c85;
            --copper: #8c7d68;
            --copper-light: #a8987f;
            --emerald: #10b981;
            --rose: #f43f5e;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            font-family: 'Tajawal', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--maroon), var(--blue));
            opacity: 0.03;
            animation: float-particle 20s infinite ease-in-out;
        }

            .particle:nth-child(1) {
                width: 400px;
                height: 400px;
                top: -10%;
                right: -10%;
                animation-delay: 0s;
            }

            .particle:nth-child(2) {
                width: 300px;
                height: 300px;
                top: 50%;
                left: -5%;
                animation-delay: 5s;
            }a

            .particle:nth-child(3) {
                width: 350px;
                height: 350px;
                bottom: -10%;
                right: 20%;
                animation-delay: 10s;
            }

            .particle:nth-child(4) {
                width: 250px;
                height: 250px;
                top: 20%;
                left: 30%;
                animation-delay: 15s;
            }

        @@keyframes float-particle {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }

            25% {
                transform: translate(30px, -30px) scale(1.1);
            }

            50% {
                transform: translate(-20px, 20px) scale(0.9);
            }

            75% {
                transform: translate(40px, 10px) scale(1.05);
            }
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, var(--maroon) 0%, var(--maroon-dark) 100%);
            padding: 20px 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 8px 32px rgba(105, 47, 57, 0.15);
            position: relative;
            z-index: 100;
            border-bottom: 3px solid var(--copper);
        }

            .navbar::before {
                content: '';
                position: absolute;
                bottom: -3px;
                left: 0;
                width: 100%;
                height: 3px;
                background: linear-gradient(90deg, var(--copper), var(--blue), var(--maroon));
                background-size: 200% 100%;
                animation: shimmer 3s linear infinite;
            }

        @@keyframes shimmer {
            0% {
                background-position: 100% 0;
            }

            100% {
                background-position: -100% 0;
            }
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 20px;
            color: white;
        }

        .navbar-logo {
            width: 70px;
            height: 70px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

            .navbar-logo:hover {
                transform: rotate(5deg) scale(1.05);
                box-shadow: 0 8px 24px rgba(255, 255, 255, 0.2);
            }

            .navbar-logo img {
                height: 50px;
                filter: brightness(0) invert(1);
            }

        .navbar-title {
            font-size: 1.8em;
            font-weight: 900;
            letter-spacing: -0.5px;
        }

        /* Login Container */
        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 50px 20px;
            position: relative;
            z-index: 1;
        }

        /* Login Card */
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 32px;
            padding: 50px 60px;
            box-shadow: 0 24px 80px rgba(0, 0, 0, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.5);
            max-width: 550px;
            width: 100%;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.8s ease;
        }

            .login-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--maroon), var(--blue), var(--copper));
                background-size: 200% 100%;
                animation: slideGradient 3s linear infinite;
            }

        @@keyframes slideGradient {
            0% {
                background-position: 0% 0;
            }

            100% {
                background-position: 200% 0;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Login Header */
        .login-header {
            text-align: center;
            margin-bottom: 45px;
        }

        .login-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            box-shadow: 0 12px 40px rgba(105, 47, 57, 0.4);
            animation: pulse-icon 2s infinite;
        }

        @@keyframes pulse-icon {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 12px 40px rgba(105, 47, 57, 0.4);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 16px 50px rgba(105, 47, 57, 0.5);
            }
        }

        .login-icon span {
            font-size: 3em;
        }

        .login-title {
            font-size: 2.2em;
            font-weight: 900;
            background: linear-gradient(135deg, var(--maroon), var(--blue), var(--copper));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }

        .login-subtitle {
            font-size: 1.1em;
            color: var(--gray-600);
            font-weight: 600;
        }

        /* Alert */
        .alert-error {
            padding: 18px 22px;
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border: 2px solid var(--rose);
            border-radius: 14px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 14px;
            animation: shake 0.5s ease;
        }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        .alert-icon-error {
            width: 42px;
            height: 42px;
            background: var(--rose);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4em;
            color: white;
        }

        .alert-message {
            color: #991b1b;
            font-weight: 700;
            font-size: 1.05em;
        }

        /* Form Fields */
        .form-group {
            margin-bottom: 28px;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--gray-700);
            font-weight: 800;
            margin-bottom: 14px;
            font-size: 1.1em;
        }

            .form-label span:first-child {
                font-size: 1.3em;
            }

        .input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 20px 24px;
            padding-right: 55px;
            border: 3px solid var(--gray-200);
            border-radius: 16px;
            font-size: 1.1em;
            font-weight: 600;
            background: var(--gray-50);
            transition: all 0.3s ease;
            font-family: 'Tajawal', sans-serif;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--maroon);
                background: white;
                box-shadow: 0 0 0 5px rgba(105, 47, 57, 0.12);
                transform: translateY(-2px);
            }

        .input-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.4em;
            color: var(--gray-400);
            transition: all 0.3s ease;
        }

        .form-input:focus + .input-icon {
            color: var(--maroon);
        }

        /* Remember & Forgot */
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 35px;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }

            .remember-me input[type="checkbox"] {
                width: 22px;
                height: 22px;
                cursor: pointer;
                appearance: none;
                border: 3px solid var(--gray-300);
                border-radius: 6px;
                background: white;
                transition: all 0.3s ease;
                position: relative;
            }

                .remember-me input[type="checkbox"]:checked {
                    background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
                    border-color: var(--maroon);
                }

                    .remember-me input[type="checkbox"]:checked::after {
                        content: '✓';
                        position: absolute;
                        top: 50%;
                        left: 50%;
                        transform: translate(-50%, -50%);
                        color: white;
                        font-weight: 900;
                        font-size: 14px;
                    }

            .remember-me label {
                color: var(--gray-700);
                font-weight: 600;
                font-size: 1em;
                cursor: pointer;
            }

        .forgot-link {
            color: var(--maroon);
            text-decoration: none;
            font-weight: 700;
            font-size: 1em;
            transition: all 0.3s ease;
        }

            .forgot-link:hover {
                color: var(--maroon-dark);
                text-decoration: underline;
            }

        /* Submit Button */
        .btn-login {
            width: 100%;
            padding: 20px 40px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 1.2em;
            font-weight: 900;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 12px 32px rgba(105, 47, 57, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

            .btn-login:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 44px rgba(105, 47, 57, 0.5);
            }

            .btn-login:active {
                transform: translateY(-2px);
            }

            .btn-login span:first-child {
                font-size: 1.3em;
            }

        /* Footer */
        .login-footer {
            text-align: center;
            margin-top: 35px;
            padding-top: 30px;
            border-top: 2px solid var(--gray-200);
        }

        .footer-text {
            color: var(--gray-600);
            font-size: 0.95em;
            font-weight: 600;
        }

        .footer-brand {
            color: var(--maroon);
            font-weight: 800;
        }

        /* Decorative Elements */
        .decorative-circle {
            position: absolute;
            border-radius: 50%;
            opacity: 0.05;
        }

        .circle-1 {
            width: 200px;
            height: 200px;
            background: var(--maroon);
            top: -50px;
            right: -50px;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
            background: var(--blue);
            bottom: -40px;
            left: -40px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .navbar {
                padding: 16px 24px;
            }

            .navbar-logo {
                width: 55px;
                height: 55px;
            }

                .navbar-logo img {
                    height: 38px;
                }

            .navbar-title {
                font-size: 1.3em;
            }

            .login-container {
                padding: 30px 20px;
            }

            .login-card {
                padding: 35px 30px;
                border-radius: 24px;
            }

            .login-icon {
                width: 80px;
                height: 80px;
            }

                .login-icon span {
                    font-size: 2.5em;
                }

            .login-title {
                font-size: 1.8em;
            }

            .login-subtitle {
                font-size: 1em;
            }

            .form-options {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
        }

        @@media (max-width: 480px) {
            .login-card {
                padding: 30px 24px;
            }

            .login-title {
                font-size: 1.5em;
            }

            .form-input {
                padding: 18px 20px;
                padding-right: 50px;
                font-size: 1em;
            }

            .btn-login {
                padding: 18px 32px;
                font-size: 1.1em;
            }
        }
    </style>
</head>
<body>
    <!-- Background Particles -->
    <div class="bg-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-brand">
            <div class="navbar-logo">
                <img src="https://www.pahw.gov.kw/images/PAHW-Logo.png" alt="PAHW" />
            </div>
            <span class="navbar-title">نظام إدارة البصمات </span>
        </div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <div class="login-card">
            <!-- Decorative Circles -->
            <div class="decorative-circle circle-1"></div>
            <div class="decorative-circle circle-2"></div>

            <!-- Login Header -->
            <div class="login-header">
                <div class="login-icon">
                    <span>🔐</span>
                </div>
                <h1 class="login-title">تسجيل الدخول</h1>
                <p class="login-subtitle">مرحباً بك في نظام إدارة البصمات</p>
            </div>

            <!-- Error Alert -->
            @if (!string.IsNullOrWhiteSpace(errorMsg))
            {
                <div class="alert-error">
                    <div class="alert-icon-error">❌</div>
                    <div class="alert-message">@errorMsg</div>
                </div>
            }
    

            @if (!string.IsNullOrWhiteSpace(errorMsg))
            {
                <div style="margin:12px 0;padding:12px;border-radius:12px;background:#ffe4e6;color:#9f1239;">
                    ⚠️ @errorMsg
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(successMsg))
            {
                <div style="margin:12px 0;padding:12px;border-radius:12px;background:#dcfce7;color:#166534;">
                    ✅ @successMsg
                </div>
            }
            <!-- Login Form -->
          
            <form method="post" asp-controller="Home" asp-action="Login">

                @Html.AntiForgeryToken()

                <!-- Username Field -->
                <div class="form-group">
                    <label class="form-label">
                        <span>👤</span>
                        <span>اسم المستخدم</span>
                    </label>
                    <div class="input-wrapper">
                        <input type="text"
                               name="empId"
                               class="form-input"
                               placeholder="أدخل الرقم الوظيفي"
                               required
                               autofocus />
                        <span class="input-icon">👤</span>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label class="form-label">
                        <span>🔒</span>
                        <span>كلمة المرور</span>
                    </label>
                    <div class="input-wrapper">
                        <input type="password"
                               name="password"
                               class="form-input"
                               placeholder="أدخل كلمة المرور"
                               required />
                        <span class="input-icon">🔒</span>
                    </div>
                </div>

                
                <!-- Submit Button -->
                <button type="submit" class="btn-login">
                    <span>🔓</span>
                    <span>دخول</span>
                </button>
            </form>

            <!-- Footer -->
            <div class="login-footer">
                <p class="footer-text">
                    جميع الحقوق محفوظة © 2026
                    <span class="footer-brand">PAHW</span>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
