@{
ViewData["Title"] = "تسجيل الدخول";
var errorMsg = TempData["ErrorMsg"] as string;
var successMsg = TempData["SuccessMsg"] as string;
}

@section Styles {
    <!-- أنماط خاصة بصفحة Login فقط -->
    <style>
        /* Login Container */
        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 50px 20px;
            position: relative;
            z-index: 1;
            min-height: calc(100vh - 120px);
        }

        /* Login Card */
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 32px;
            padding: 50px 60px;
            box-shadow: 0 24px 80px rgba(0, 0, 0, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.5);
            max-width: 550px;
            width: 100%;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.8s ease;
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--maroon), var(--blue), var(--copper));
            background-size: 200% 100%;
            animation: slideGradient 3s linear infinite;
        }

        @@keyframes slideGradient {
            0% { background-position: 0% 0; }
            100% { background-position: 200% 0; }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Login Header */
        .login-header {
            text-align: center;
            margin-bottom: 45px;
        }

        .login-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            box-shadow: 0 12px 40px rgba(105, 47, 57, 0.4);
            animation: pulse-icon 2s infinite;
        }

        .login-icon span {
            font-size: 3em;
        }

        @@keyframes pulse-icon {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 12px 40px rgba(105, 47, 57, 0.4);
            }
            50% {
                transform: scale(1.05);
                box-shadow: 0 16px 50px rgba(105, 47, 57, 0.5);
            }
        }

        .login-title {
            font-size: 2.2em;
            font-weight: 900;
            color: var(--maroon);
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }

        .login-subtitle {
            font-size: 1.1em;
            color: var(--gray-600);
            font-weight: 600;
        }

        /* Alert Messages */
        .alert-error {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            padding: 18px 20px;
            border-radius: 16px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
            border: 2px solid var(--rose);
            font-weight: 700;
            animation: shake 0.5s ease;
        }

        .alert-success {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #166534;
            padding: 18px 20px;
            border-radius: 16px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
            border: 2px solid var(--emerald);
            font-weight: 700;
        }

        .alert-icon-error,
        .alert-icon-success {
            font-size: 1.8em;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }

        /* Form Elements for Login */
        .form-group {
            margin-bottom: 28px;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 12px;
            color: var(--gray-800);
            font-weight: 800;
            font-size: 1.05em;
        }

        .form-label span:first-child {
            font-size: 1.3em;
        }

        .input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 20px 60px 20px 24px;
            border: 3px solid var(--gray-300);
            border-radius: 16px;
            font-size: 1.1em;
            font-weight: 600;
            font-family: 'Tajawal', sans-serif;
            transition: all 0.3s ease;
            background: var(--gray-50);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--maroon);
            background: white;
            box-shadow: 0 0 0 5px rgba(105, 47, 57, 0.1);
            transform: translateY(-2px);
        }

        .form-input::placeholder {
            color: var(--gray-400);
            font-weight: 500;
        }

        .input-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5em;
            color: var(--gray-400);
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .form-input:focus + .input-icon {
            color: var(--maroon);
            transform: translateY(-50%) scale(1.1);
        }

        /* Submit Button */
        .btn-login {
            width: 100%;
            padding: 20px 40px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 1.2em;
            font-weight: 900;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 12px 32px rgba(105, 47, 57, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-family: 'Tajawal', sans-serif;
        }

        .btn-login:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 44px rgba(105, 47, 57, 0.5);
        }

        .btn-login:active {
            transform: translateY(-2px);
        }

        .btn-login span:first-child {
            font-size: 1.3em;
        }

        /* Footer */
        .login-footer {
            text-align: center;
            margin-top: 35px;
            padding-top: 30px;
            border-top: 2px solid var(--gray-200);
        }

        .footer-text {
            color: var(--gray-600);
            font-size: 0.95em;
            font-weight: 600;
        }

        .footer-brand {
            color: var(--maroon);
            font-weight: 800;
        }

        /* Decorative Elements */
        .decorative-circle {
            position: absolute;
            border-radius: 50%;
            opacity: 0.05;
        }

        .circle-1 {
            width: 200px;
            height: 200px;
            background: var(--maroon);
            top: -50px;
            right: -50px;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
            background: var(--blue);
            bottom: -40px;
            left: -40px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-container {
                padding: 30px 20px;
            }

            .login-card {
                padding: 35px 30px;
                border-radius: 24px;
            }

            .login-icon {
                width: 80px;
                height: 80px;
            }

            .login-icon span {
                font-size: 2.5em;
            }

            .login-title {
                font-size: 1.8em;
            }

            .login-subtitle {
                font-size: 1em;
            }
        }

        @@media (max-width: 480px) {
            .login-card {
                padding: 30px 24px;
            }

            .login-title {
                font-size: 1.5em;
            }

            .form-input {
                padding: 18px 20px;
                padding-right: 50px;
                font-size: 1em;
            }

            .btn-login {
                padding: 18px 32px;
                font-size: 1.1em;
            }
        }
    </style>
}

<!-- Login Container -->
<div class="login-container">
    <div class="login-card">
        <!-- Decorative Circles -->
        <div class="decorative-circle circle-1"></div>
        <div class="decorative-circle circle-2"></div>

        <!-- Login Header -->
        <div class="login-header">
            <div class="login-icon">
                <span>🔐</span>
            </div>
            <h1 class="login-title">تسجيل الدخول</h1>
            <p class="login-subtitle">مرحباً بك في نظام إدارة البصمات</p>
        </div>

        <!-- Error Alert -->
        @if (!string.IsNullOrWhiteSpace(errorMsg))
        {
        <div class="alert-error">
            <div class="alert-icon-error">❌</div>
            <div class="alert-message">@errorMsg</div>
        </div>
        }

        <!-- Success Alert -->
        @if (!string.IsNullOrWhiteSpace(successMsg))
        {
        <div class="alert-success">
            <div class="alert-icon-success">✅</div>
            <div class="alert-message">@successMsg</div>
        </div>
        }

        <!-- Login Form -->
        <form method="post" asp-controller="Home" asp-action="Login">
            @Html.AntiForgeryToken()

            <!-- Username Field -->
            <div class="form-group">
                <label class="form-label">
                    <span>👤</span>
                    <span>اسم المستخدم</span>
                </label>
                <div class="input-wrapper">
                    <input type="text"
                           name="empId"
                           class="form-input"
                           placeholder="أدخل الرقم الوظيفي"
                           required
                           autofocus />
                    <span class="input-icon">👤</span>
                </div>
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label class="form-label">
                    <span>🔒</span>
                    <span>كلمة المرور</span>
                </label>
                <div class="input-wrapper">
                    <input type="password"
                           name="password"
                           class="form-input"
                           placeholder="أدخل كلمة المرور"
                           required />
                    <span class="input-icon">🔒</span>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-login">
                <span>🔓</span>
                <span>دخول</span>
            </button>
        </form>

        <!-- Footer -->
        <div class="login-footer">
            <p class="footer-text">
                جميع الحقوق محفوظة © 2026
                <span class="footer-brand">PAHW</span>
            </p>
        </div>
    </div>
</div>
