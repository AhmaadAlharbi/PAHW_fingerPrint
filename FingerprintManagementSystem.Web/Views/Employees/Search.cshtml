        .device-card {
            background: white;
            border: 2px solid var(--gray-200);
            border-radius: 16px;
            padding: 20px;
            transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            gap: 16px;
            position: relative;
            overflow: hidden;
        }

        .device-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--gray-300), var(--gray-200));
            transition: all 0.3s ease;
        }

        .device-card:hover {
            border-color: var(--copper);
            transform: translateY(-4px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
        }

        .device-card:hover::before {
            background: linear-gradient(180deg, var(--copper), var(--maroon));
        }

        /* Selected Terminal Card - Enhanced Green Theme */
        .device-card.selected {
            background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 50%, #a7f3d0 100%);
            border-color: var(--emerald);
            box-shadow:
                0 0 0 1px rgba(16, 185, 129, 0.2),
                0 12px 40px rgba(16, 185, 129, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
        }

        .device-card.selected::before {
            background: linear-gradient(180deg, var(--emerald), #059669);
            width: 5px;
        }

        .device-card.selected::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(ellipse at top right, rgba(16, 185, 129, 0.08) 0%, transparent 50%),
