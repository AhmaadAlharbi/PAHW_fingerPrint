        }

        .device-checkbox {
            position: relative;
            z-index: 2;
        }

        .device-checkbox input[type="checkbox"] {
            width: 24px;
            height: 24px;
            cursor: pointer;
            appearance: none;
            border: 2px solid var(--gray-300);
            border-radius: 7px;
            background: white;
            transition: all 0.3s ease;
            position: relative;
        }

        .device-checkbox input[type="checkbox"]:hover {
            border-color: var(--maroon);
            transform: scale(1.1);
