        .devices-section-title .icon {
            color: var(--blue);
        }

        .select-all-box {
            background: white;
            border: 2px solid var(--gray-200);
            border-radius: 14px;
            padding: 18px 22px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .select-all-box:hover {
            border-color: var(--maroon);
            background: linear-gradient(135deg, white, #fef2f2);
            box-shadow: 0 4px 16px rgba(105, 47, 57, 0.1);
            transform: translateY(-2px);
        }

        .select-all-box input[type="checkbox"] {
            width: 26px;
            height: 26px;
            cursor: pointer;
            appearance: none;
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            background: white;
            transition: all 0.3s ease;
            position: relative;
            flex-shrink: 0;
        }

        .select-all-box input[type="checkbox"]:checked {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-color: var(--maroon);
        }

        .select-all-box input[type="checkbox"]:checked::after {
            content: '\f00c';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 14px;
        }

        .select-all-label {
            font-weight: 800;
            font-size: 1.1em;
            color: var(--gray-900);
        }

        .devices-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
