@model FingerprintManagementSystem.Contracts.DTOs.EmployeeDevicesScreenDto
@{
ViewData["Title"] = "بحث موظف";
var toastType = TempData["ToastType"] as string;
var toastMsg = TempData["ToastMsg"] as string;
var lastEmployeeId = TempData["LastEmployeeId"]?.ToString();
var devices = Model?.Devices ?? new List<FingerprintManagementSystem.Contracts.DTOs.DeviceRowDto>();
var assigned = devices.Where(x => x.IsEffectivelyAssigned).ToList();
var unassigned = devices.Where(x => !x.IsEffectivelyAssigned).ToList();
}
@{
var selectedTerminalsRaw = TempData["SelectedTerminalIds"] as string;
var selectedTerminals = new HashSet<string>(
(selectedTerminalsRaw ?? "")
.Split(',', StringSplitOptions.RemoveEmptyEntries)
.Select(x => x.Trim()),
StringComparer.OrdinalIgnoreCase
);
}

@section Styles {
    <!-- Font Awesome for professional icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <!-- Flatpickr for date formatting -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <!-- أنماط خاصة بصفحة البحث فقط -->
    <style>
        /* Main Content */
        .main-content {
            padding: 50px;
            position: relative;
            z-index: 1;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Icon Styling */
        .icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .icon-sm { font-size: 0.875rem; }
        .icon-md { font-size: 1rem; }
        .icon-lg { font-size: 1.25rem; }
        .icon-xl { font-size: 1.5rem; }
        .icon-2xl { font-size: 2rem; }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 50px;
            animation: slideDown 0.8s ease;
            position: relative;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .page-header h1 {
            font-size: 3.2em;
            font-weight: 900;
            background: linear-gradient(135deg, var(--maroon), var(--blue), var(--copper));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 12px;
            letter-spacing: -1px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
        }

        .page-header h1 .icon {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            -webkit-background-clip: initial;
            -webkit-text-fill-color: initial;
            background-clip: initial;
            color: white;
            width: 64px;
            height: 64px;
            border-radius: 18px;
            box-shadow: 0 8px 24px rgba(105, 47, 57, 0.35);
        }

        .page-header p {
            font-size: 1.25em;
            color: var(--gray-600);
            font-weight: 500;
        }

        /* Admin Action Button */
        .btn-admin-action {
            position: absolute;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            background: linear-gradient(135deg, var(--gray-100), var(--gray-50));
            border: 2px solid var(--gray-300);
            border-radius: 12px;
            color: var(--gray-700);
            font-size: 0.9em;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: 'Tajawal', sans-serif;
        }

        .btn-admin-action:hover {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-color: var(--maroon);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(105, 47, 57, 0.3);
        }

        .btn-admin-action:hover i {
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .btn-admin-action i {
            font-size: 1em;
            transition: all 0.3s ease;
        }

        /* Premium Card Design */
        .premium-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.5);
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.6s ease both;
        }

        .premium-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--maroon), var(--blue), var(--copper));
            background-size: 200% 100%;
            animation: slideGradient 3s linear infinite;
        }

        @@keyframes slideGradient {
            0% { background-position: 0% 0; }
            100% { background-position: 200% 0; }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .premium-card:nth-child(1) { animation-delay: 0.1s; }
        .premium-card:nth-child(2) { animation-delay: 0.2s; }
        .premium-card:nth-child(3) { animation-delay: 0.3s; }

        /* Section Header Design */
        .section-header {
            display: flex;
            align-items: center;
            gap: 18px;
            margin-bottom: 35px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--gray-200);
            position: relative;
        }

        .section-header::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 120px;
            height: 2px;
            background: linear-gradient(90deg, var(--maroon), transparent);
        }

        .section-number {
            width: 52px;
            height: 52px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6em;
            font-weight: 900;
            color: white;
            box-shadow: 0 8px 20px rgba(105, 47, 57, 0.3);
        }

        .section-title {
            font-size: 1.8em;
            font-weight: 800;
            color: var(--gray-800);
            letter-spacing: -0.5px;
        }

        /* Enhanced Form Fields */
        .form-field {
            margin-bottom: 30px;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--gray-700);
            font-weight: 700;
            margin-bottom: 12px;
            font-size: 1.05em;
        }

        .form-label .icon {
            color: var(--maroon);
            font-size: 1.1em;
        }

        .form-input {
            width: 100%;
            padding: 18px 24px;
            border: 2px solid var(--gray-200);
            border-radius: 14px;
            font-size: 1.08em;
            font-weight: 500;
            background: var(--gray-50);
            transition: all 0.3s ease;
            font-family: 'Tajawal', sans-serif;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--maroon);
            background: white;
            box-shadow: 0 0 0 4px rgba(105, 47, 57, 0.1);
            transform: translateY(-2px);
        }

        /* Alert Boxes */
        .alert {
            padding: 24px 28px;
            border-radius: 16px;
            margin-bottom: 30px;
            display: flex;
            align-items: flex-start;
            gap: 16px;
            border: 2px solid;
            animation: slideInRight 0.5s ease;
        }

  

        .alert-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25em;
            flex-shrink: 0;
        }

        .alert-content {
            flex: 1;
        }

        .alert-title {
            font-weight: 800;
            font-size: 1.15em;
            margin-bottom: 6px;
        }

        .alert-message {
            font-weight: 500;
            line-height: 1.6;
        }

        .alert-success {
            background: linear-gradient(135deg, #ecfdf5, #d1fae5);
            border-color: var(--emerald);
        }

        .alert-success .alert-icon {
            background: var(--emerald);
            color: white;
        }

        .alert-success .alert-title {
            color: #065f46;
        }

        .alert-success .alert-message {
            color: #047857;
        }

        .alert-warning {
            background: linear-gradient(135deg, #fffbeb, #fef3c7);
            border-color: var(--amber);
        }

        .alert-warning .alert-icon {
            background: var(--amber);
            color: white;
        }

        .alert-warning .alert-title {
            color: #92400e;
        }

        .alert-warning .alert-message {
            color: #b45309;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border-color: var(--rose);
        }

        .alert-danger .alert-icon {
            background: var(--rose);
            color: white;
        }

        .alert-danger .alert-title {
            color: #991b1b;
        }

        .alert-danger .alert-message {
            color: #dc2626;
        }

        .alert-info {
            background: linear-gradient(135deg, #eff6ff, #dbeafe);
            border-color: var(--blue);
        }

        .alert-info .alert-icon {
            background: var(--blue);
            color: white;
        }

        .alert-info .alert-title {
            color: #1e40af;
        }

        .alert-info .alert-message {
            color: #1e3a8a;
        }

        /* Employee Info Card */
        .employee-card {
            background: linear-gradient(135deg, #f9fafb, white);
            border: 2px solid var(--gray-200);
            border-radius: 20px;
            padding: 32px;
            margin-top: 24px;
            position: relative;
            overflow: hidden;
        }

        .employee-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(105, 47, 57, 0.05), transparent);
            border-radius: 50%;
            transform: translate(50%, -50%);
        }

        .employee-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 24px;
            position: relative;
            z-index: 1;
        }

        .employee-item {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .employee-label {
            color: var(--gray-500);
            font-size: 0.95em;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .employee-label .icon {
            color: var(--maroon);
            opacity: 0.7;
        }

        .employee-value {
            color: var(--gray-900);
            font-size: 1.2em;
            font-weight: 800;
        }

        .stats-badges {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .stat-badge {
            padding: 12px 20px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.95em;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .stat-badge:hover {
            transform: translateY(-3px) scale(1.05);
        }

        .stat-badge .icon {
            font-size: 1em;
        }

        .stat-badge-primary {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            color: white;
            box-shadow: 0 6px 20px rgba(105, 47, 57, 0.35);
        }

        .stat-badge-success {
            background: linear-gradient(135deg, var(--emerald), #059669);
            color: white;
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.35);
        }

        .stat-badge-info {
            background: linear-gradient(135deg, var(--gray-700), var(--gray-500));
            color: white;
            box-shadow: 0 6px 20px rgba(107, 114, 128, 0.35);
        }

        /* Region Filters */
        .region-filters {
            display: flex;
            gap: 12px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

        .filter-pill {
            padding: 12px 24px;
            border-radius: 50px;
            border: 2px solid var(--gray-300);
            background: white;
            color: var(--gray-700);
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-pill:hover {
            border-color: var(--maroon);
            background: var(--gray-50);
        }

        .filter-pill.active {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            color: white;
            border-color: var(--maroon);
        }

        /* Region Cards */
        .regions-container {
            display: grid;
            grid-template-columns: 1fr;
            gap: 32px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .region-card {
            background: white;
            border: 2px solid var(--gray-200);
            border-radius: 24px;
            overflow: hidden;
            transition: all 0.4s ease;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
        }

        .region-card:hover {
            border-color: var(--maroon);
            box-shadow: 0 16px 48px rgba(105, 47, 57, 0.12);
            transform: translateY(-4px);
        }

        .region-header {
            background: linear-gradient(135deg, var(--gray-50), white);
            padding: 28px 32px;
            border-bottom: 2px solid var(--gray-200);
            transition: all 0.3s ease;
        }

        .region-header:hover {
            background: linear-gradient(135deg, white, #fef2f2);
        }

        .region-header.active {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border-bottom-color: var(--maroon);
        }

        .region-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 24px;
        }

        .region-left {
            display: flex;
            align-items: center;
            gap: 20px;
            flex: 1;
        }

        .region-icon-wrapper {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            color: white;
            box-shadow: 0 8px 24px rgba(105, 47, 57, 0.3);
            flex-shrink: 0;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .region-icon-wrapper:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 32px rgba(105, 47, 57, 0.4);
        }

        .region-info {
            flex: 1;
            min-width: 0;
            cursor: pointer;
        }

        .region-info h4 {
            font-size: 1.5em;
            font-weight: 900;
            color: var(--gray-900);
            margin-bottom: 10px;
            letter-spacing: -0.5px;
        }

        .region-meta {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .meta-badge {
            padding: 6px 14px;
            background: var(--gray-100);
            border-radius: 8px;
            font-size: 0.9em;
            font-weight: 700;
            color: var(--gray-600);
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.2s ease;
        }

        .meta-badge .icon {
            font-size: 0.85em;
        }

        .meta-badge.success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
        }

        .meta-badge.delegated {
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: #1e40af;
        }

        .btn-icon-toggle {
            width: 48px;
            height: 48px;
            border-radius: 14px;
            border: 2px solid var(--gray-300);
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1.1em;
            color: var(--gray-600);
            flex-shrink: 0;
        }

        .btn-icon-toggle:hover {
            border-color: var(--maroon);
            color: var(--maroon);
            transform: scale(1.1);
            background: #fef2f2;
        }

        .btn-icon-toggle .icon {
            transition: transform 0.3s ease;
        }

        .region-header.active .btn-icon-toggle .icon {
            transform: rotate(180deg);
        }

        .collapse {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .collapse.show {
            max-height: 6000px;
        }

        /* Region Options */
        .region-options {
            padding: 32px;
            background: linear-gradient(135deg, #fafbfc, white);
            border-bottom: 2px solid var(--gray-200);
        }

        .options-title {
            font-size: 1.2em;
            font-weight: 900;
            color: var(--gray-900);
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            padding-bottom: 16px;
            border-bottom: 2px solid var(--gray-200);
        }

        .options-title .icon {
            color: var(--maroon);
        }

        .instruction-box {
            background: linear-gradient(135deg, #eff6ff, #dbeafe);
            border: 2px solid #3b82f6;
            border-radius: 16px;
            padding: 20px 24px;
            margin-bottom: 24px;
            display: flex;
            align-items: flex-start;
            gap: 16px;
        }

        .instruction-box-icon {
            font-size: 1.5em;
            flex-shrink: 0;
            color: #3b82f6;
        }

        .instruction-box-content {
            flex: 1;
        }

        .instruction-box-title {
            font-weight: 900;
            font-size: 1.1em;
            color: #1e40af;
            margin-bottom: 8px;
        }

        .instruction-box-text {
            color: #1e3a8a;
            font-weight: 600;
            line-height: 1.6;
        }

        .radio-options {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 16px;
            margin-bottom: 24px;
        }

        .radio-option {
            position: relative;
        }

        .radio-option input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

        .radio-option label {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 12px;
            padding: 24px 16px;
            background: white;
            border: 2px solid var(--gray-200);
            border-radius: 18px;
            font-weight: 800;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s ease;
            min-height: 120px;
        }

        .radio-option label .icon {
            font-size: 2rem;
            color: var(--gray-500);
            transition: all 0.3s ease;
        }

        .radio-option input[type="radio"]:checked + label {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            border-color: var(--maroon);
            color: white;
            box-shadow: 0 10px 30px rgba(105, 47, 57, 0.4);
            transform: translateY(-4px) scale(1.02);
        }

        .radio-option input[type="radio"]:checked + label .icon {
            color: white;
        }

        .radio-option label:hover {
            border-color: var(--maroon);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

        /* Date Fields */
        .dates-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 24px;
            opacity: 0;
            max-height: 0;
            overflow: hidden;
            transition: all 0.5s ease;
            margin-top: 0;
        }

        .dates-row.show {
            opacity: 1;
            max-height: 300px;
            margin-top: 24px;
        }

        .date-field {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .date-label {
            font-size: 1.05em;
            font-weight: 800;
            color: var(--gray-800);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .date-label .icon {
            color: var(--maroon);
            font-size: 1.1em;
        }

        .date-input {
            padding: 18px 22px;
            border: 2px solid var(--gray-200);
            border-radius: 16px;
            font-size: 1.08em;
            font-weight: 700;
            background: white;
            transition: all 0.3s ease;
            font-family: 'Tajawal', sans-serif;
            color: var(--gray-800);
        }

        .date-input:focus {
            outline: none;
            border-color: var(--maroon);
            box-shadow: 0 0 0 4px rgba(105, 47, 57, 0.12);
            transform: translateY(-2px);
        }

        /* Flatpickr custom styling */
        .flatpickr-calendar {
            font-family: 'Tajawal', sans-serif;
            border-radius: 16px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            border: 2px solid var(--gray-200);
        }

        .flatpickr-day.selected,
        .flatpickr-day.selected:hover {
            background: var(--maroon);
            border-color: var(--maroon);
        }

        .flatpickr-day:hover {
            background: #fef2f2;
            border-color: var(--maroon);
        }

        .flatpickr-months .flatpickr-month {
            background: var(--maroon);
            color: white;
            border-radius: 14px 14px 0 0;
        }

        .flatpickr-current-month .flatpickr-monthDropdown-months,
        .flatpickr-current-month input.cur-year {
            color: white;
            font-weight: 700;
        }

        .flatpickr-months .flatpickr-prev-month,
        .flatpickr-months .flatpickr-next-month {
            fill: white;
        }

        .flatpickr-months .flatpickr-prev-month:hover,
        .flatpickr-months .flatpickr-next-month:hover {
            fill: white;
            opacity: 0.8;
        }

        span.flatpickr-weekday {
            color: var(--gray-600);
            font-weight: 700;
        }

        .warning-note {
            margin-top: 20px;
            padding: 18px 24px;
            background: linear-gradient(135deg, #fffbeb, #fef3c7);
            border: 2px solid var(--amber);
            border-radius: 16px;
            display: flex;
            align-items: center;
            gap: 14px;
            font-size: 1em;
            font-weight: 700;
            color: #92400e;
            opacity: 0;
            max-height: 0;
            overflow: hidden;
            transition: all 0.5s ease;
        }

        .warning-note.show {
            opacity: 1;
            max-height: 150px;
        }

        .warning-note .icon {
            font-size: 1.3em;
            color: #f59e0b;
        }

        .submit-region-btn {
            margin-top: 24px;
            width: 100%;
            padding: 18px 32px;
            background: linear-gradient(135deg, var(--emerald), #059669);
            color: white;
            border: none;
            border-radius: 16px;
            font-weight: 900;
            font-size: 1.15em;
            cursor: pointer;
            transition: all 0.3s ease;
