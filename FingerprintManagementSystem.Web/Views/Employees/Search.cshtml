        .device-details {
            flex: 1;
            min-width: 0;
            position: relative;
            z-index: 1;
        }

        .device-name {
            font-size: 1.05em;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .device-card.selected .device-name {
            color: #065f46;
        }

        .device-meta {
            color: var(--gray-500);
            font-size: 0.85em;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .device-meta .icon {
            font-size: 0.75em;
        }

        .device-card.selected .device-meta {
            color: #047857;
        }

        .device-action {
            flex-shrink: 0;
            position: relative;
            z-index: 2;
        }

        .btn-device {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
