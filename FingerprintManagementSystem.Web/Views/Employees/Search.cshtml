        .device-icon::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(180deg, rgba(255,255,255,0.5), transparent);
            border-radius: 14px 14px 0 0;
        }

        /* Selected Terminal Icon - Enhanced Green */
        .device-card.selected .device-icon {
            background: linear-gradient(145deg, var(--emerald), #059669);
            color: white;
            box-shadow:
                0 8px 24px rgba(16, 185, 129, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            transform: scale(1.08);
        }

        .device-card.selected .device-icon::after {
            content: '';
            position: absolute;
            bottom: -2px;
            right: -2px;
            width: 16px;
            height: 16px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
