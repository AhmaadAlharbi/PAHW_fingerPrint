        }

        .bulk-bar.show {
            transform: translateX(-50%) translateY(0);
        }

        .bulk-info {
            display: flex;
            align-items: center;
            gap: 16px;
            color: white;
        }

        .pulse-indicator {
            width: 12px;
            height: 12px;
            background: var(--emerald);
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.8);
            }
            70% {
                box-shadow: 0 0 0 18px rgba(16, 185, 129, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
            }
        }

        .bulk-count {
            font-size: 2em;
            font-weight: 900;
        }

        .bulk-label {
            font-size: 1em;
            opacity: 0.95;
            font-weight: 700;
        }

        .bulk-actions {
            display: flex;
            gap: 12px;
        }

        .btn-bulk {
            padding: 14px 32px;
            border: none;
            border-radius: 14px;
            font-size: 1em;
            font-weight: 900;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-bulk .icon {
            font-size: 1em;
        }

        .btn-bulk-success {
            background: white;
            color: var(--maroon);
        }

        .btn-bulk-success:hover {
            background: var(--emerald);
            color: white;
            transform: translateY(-4px);
            box-shadow: 0 14px 32px rgba(16, 185, 129, 0.5);
        }

        .btn-bulk-danger {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .btn-bulk-danger:hover {
            background: var(--rose);
            border-color: var(--rose);
            transform: translateY(-4px);
            box-shadow: 0 14px 32px rgba(244, 63, 94, 0.5);
        }

        /* Action Buttons */
        .form-actions {
            display: flex;
            gap: 18px;
            justify-content: flex-end;
            padding-top: 36px;
            margin-top: 36px;
            border-top: 2px solid var(--gray-200);
        }

        .btn {
            padding: 16px 36px;
            border-radius: 14px;
            font-size: 1.1em;
            font-weight: 900;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            gap: 12px;
            border: 2px solid transparent;
        }

        .btn .icon {
            font-size: 1em;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--maroon), var(--maroon-dark));
            color: white;
            box-shadow: 0 8px 24px rgba(105, 47, 57, 0.35);
        }

        .btn-primary:hover {
            transform: translateY(-4px);
            box-shadow: 0 14px 40px rgba(105, 47, 57, 0.45);
        }

        .empty-state {
            text-align: center;
            padding: 60px 40px;
            background: linear-gradient(135deg, var(--gray-50), white);
            border-radius: 20px;
            border: 2px dashed var(--gray-300);
        }

        .empty-state-icon {
            font-size: 3.5em;
            margin-bottom: 20px;
            color: var(--gray-400);
        }

        .empty-state-text {
            font-size: 1.2em;
            color: var(--gray-500);
            font-weight: 600;
        }

        .btn-logout {
            background: #dc2626;
            color: #fff;
            border: 0;
            padding: 8px 14px;
            border-radius: 10px;
            cursor: pointer;
        }

        .btn-logout:hover {
            background: #b91c1c;
        }

        /* Responsive */
        @@media (max-width: 1400px) {
            .regions-container {
                grid-template-columns: 1fr;
            }
            .radio-options {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .main-content {
                padding: 30px 20px;
            }
            .page-header {
                padding-top: 60px;
            }
            .page-header h1 {
